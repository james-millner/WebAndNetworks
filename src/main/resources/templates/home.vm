#parse("includes/header.vm")

#parse("includes/menu.vm")

<div class="row">
    <div class="col s6">
        #parse("word.vm")
    </div>

    <div class="col s6">
        <div class="col s12">
            <form action="/wordnet" method="POST">
                <div class="col s12">
                    <input type="text" name="word" placeholder="Enter a word..." autofocus/>
                </div>
                <div class="col s12">
                    <select name="type">
                        <option value="noun">Noun</option>
                        <option value="verb">Verb</option>
                        <option value="adjective">Adjective</option>
                        <option value="adverb">Adverb</option>
                    </select>
                </div>
                <div class="col s12">
                    <button type="submit">Submit</button>
                </div>
            </form>
        </div>
        <div class="col s12" style="margin-top: 50px" align="center">
            <a class="waves-effect waves-light btn" href="/open-nlp">Auto Gather Words</a>
            <p>*This get al</p>
        </div>
        <div class="col s12" style="margin-top: 50px">
            <table class="table table-striped table-condensed">
                <thead>
                <th>ID</th>
                <th>Word</th>
                <th>Type</th>
                </thead>
                <tbody
                #foreach($word in $words)
                    <tr>
                        <td>$word.id</td>
                        <td><a href="/word-definition/$word.id">$word.search</a></td>
                        <td>$word.type</td>
                    </tr>
                #end
            </table>
        </div>
    </div>
</div>

<script>
    $(document).ready(function(){
        $('.table').DataTable( {
            "order": [[ 1, 'asc' ]],
            "pageLength": 10
        });
    });

    $(document).ready(function() {
        $('select').material_select();
    });
</script>


