#if($word)
<div class="container">
    <h2>$word.search</h2>
    <div class="divider"></div>
    <ul class="collection">
        #foreach($meaning in $word.meanings)
            <li class="collection-item">$meaning.meaning</li>
        #end
    </ul>
</div>
#else
    <div class="container">
        <h2>Select a word.</h2>
    </div>
#end
